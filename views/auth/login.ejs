<% layout('/layouts/app') %>

<div class="col-6 offset-3">
  <h1>Login</h1>
  <form action="/login" method="POST" class="validated-form" novalidate>
    <div>
      <label for="username">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control"
        required
      />
    </div>
    <div>
      <label for="password">Password</label>
      <input
        type="text"
        name="password"
        id="password"
        class="form-control"
        required
      ></input>
    </div>
    <button type="submit" class="btn btn-success my-2">Login</button>
  </form>
</div>
